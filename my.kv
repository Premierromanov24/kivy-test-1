<MyGrid>
    messagefield: messagefield
    response: response
    GridLayout:
        size: root.width, root.height
        cols:1
        GridLayout: 
            cols:2
            Button:
                text:"Submit messaage"
                on_press: root.messagebuttonpressed()
            TextInput:
                id: messagefield
                multiline:False
            Label:
                text:"Response"
            TextInput:
                id: response
                multiline:False
        Button:
            text:"Send location"
            on_press: root.locbuttonpressed()
